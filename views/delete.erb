<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title">Delete post?</h3>
  </div>
  <div class="panel-body">
    <form action="/delete" method="post">
      <div class="form-group">
        <input type="url" class="form-control" name="url" readonly
          value="<%= params[:url] %>">
      </div>
      <div>
        <button class="btn btn-primary btn-danger" type="submit">Delete</button>
        <a href="/" class="btn" role="button">Cancel</a>
      </div>
    </form>
  </div>
</div>